#!/bin/bash
set -ex

source ./common
init_test_repo
cd $test_repo_path

## `--dry-run` test for DockerRunner

git clone https://github.com/cplee/github-actions-demo
cd github-actions-demo
git checkout c824a5a

export PHONY_SECRET=foo

# delete any containers that might exist
docker rm $(docker ps -aq) || true

dry_num_lines=$(popper run --dry-run | grep 'DRYRUN' | wc -l)

# 5 actions, at least one line per action
test $dry_num_lines -gt 5

# test that no containers are running
test -z "$(docker ps -aq)"

## `--dry-run` test for SingularityRunner

cd $test_repo_path
mkdir actions
mkdir actions/example

export SECRET_KEY=1234

cat <<EOF > actions/example/singularity.def
Bootstrap: docker
From: ubuntu:14.04

%runscript
echo 'Entered runscript'
echo \$F_NAME
echo \$L_NAME
echo \$SECRET_KEY
sh -c \$@
EOF

cat <<EOF > main.workflow
workflow "test" {
  resolves = ["custom action"]
}

action "shub action" {
  uses = "shub://singularityhub/centos"
  runs = ["ls", "-al"]
}

action "public action" {
  uses = "JayjeetAtGithub/actions/wget@master"
  args = ["github.com"]
}

action "custom action" {
  uses = "./actions/example"
  args = ["ls", "-al"]
  secrets = ["SECRET_KEY"]
  env = {
    F_NAME = "first_name",
    L_NAME = "last_name"
  }
  needs = [
    "shub action",
    "public action"
  ]
}
EOF

dry_num_lines=$(popper run --dry-run | grep 'DRYRUN' | wc -l)

test $dry_num_lines -eq 6
