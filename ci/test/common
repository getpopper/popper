#!/bin/bash
set -e

export test_repo_path=/tmp/mypaper

function delete_dir {
  set +e
  if ! rm -rf $1; then
    # try to remove using docker
    docker run --rm -v /tmp:/tmp alpine:3.8 rm -rf $1
  fi
  set -e
}

function init_test_repo {
  delete_dir $test_repo_path
  mkdir $test_repo_path
  pushd $test_repo_path
  git init
  echo 'foo' > README.md
  git add .
  git commit -m 'first'
  popd
}

